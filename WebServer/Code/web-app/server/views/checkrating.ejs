<html lang="ko">

<head>
    <%- include('head.ejs'); %>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
</head>
<body style="text-align: center;">
    <%- include('header.ejs'); %>
    <div class="posts">
        <h1>Get the Current Poll Standings</h1>
        <button onclick="checkpoll()">Check Poll</button>
        <br><!----><br><!---->
        <div class="chart-wrapper" style="width:400px;height:400px;margin:0 auto;">
            <canvas id="myChart" width="400" height="400"></canvas>
        </div>
    </div>
</div>

<script type="text/javascript">
    var checkpoll = function(){
        $.ajax({
            url:'/getCurrentStanding',
            success:function(data){
                var jsonfile = {
                    "jsonarray": JSON.parse(data)
                };
                var labels = jsonfile.jsonarray.map(function(e) {
                    return e.Key;
                });
                var data = jsonfile.jsonarray.map(function(e) {
                    return e.Record.count;
                });;
                var ctx = $('#myChart');
                var config = {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Graph Bar',
                        data: data,
                        backgroundColor: 'rgba(0, 119, 204, 0.3)'
                    }]
                }
                };

                var chart = new Chart(ctx, config);
            }
        })
    }
</script>
</body>